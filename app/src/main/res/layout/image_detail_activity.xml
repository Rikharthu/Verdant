<?xml version="1.0" encoding="utf-8"?>
<com.liuguangqiang.swipeback.SwipeBackLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dragLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".imagedetail.ImageDetailActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.nirhart.parallaxscroll.views.ParallaxScrollView
            android:id="@+id/parallax"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@color/imgur_dark"
            android:clickable="true"
            android:fillViewport="false"
            android:orientation="vertical"
            app:parallax_factor="1.9">

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--The main image of the entire detail view-->
                <ImageView
                    android:id="@+id/big_net_img"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:transitionName="image_hero"
                    app:layout_aspectRatio="@fraction/detail_img_aspect"
                    app:layout_widthPercent="100%" />

                <!--The whole layout below the image, this will parallax scroll over the image.-->
                <android.support.percent.PercentRelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/big_net_img"
                    android:background="@color/imgur_dark"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!--Literally just says Title -->
                    <TextView
                        android:id="@+id/final_title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="Title:"
                        android:textColor="@color/material_white"
                        android:textSize="24sp" />

                    <!--Shows the image's title-->
                    <TextView
                        android:id="@+id/big_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/final_title_text"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/material_white"
                        android:textSize="14sp" />

                    <!--Just says Description might get hidden-->
                    <TextView
                        android:id="@+id/final_desc_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/big_title"
                        android:layout_marginBottom="8dp"
                        android:text="Description:"
                        android:textColor="@color/material_white"
                        android:textSize="24sp" />

                    <!--The images description (might be hidden if there was no desc)-->
                    <TextView
                        android:id="@+id/desc_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/final_desc_text"
                        android:layout_marginBottom="8dp"
                        android:autoLink="web"
                        android:textColor="@color/material_white"
                        android:textSize="14sp" />

                    <!--shows the views count-->
                    <TextView
                        android:id="@+id/views_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/desc_text"
                        android:drawableTop="@drawable/ic_visibility_white_24dp"
                        android:text="1000000"
                        android:textColor="@color/material_white"
                        app:layout_marginLeftPercent="14%" />

                    <!--shows the views count-->
                    <TextView
                        android:id="@+id/points_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/desc_text"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:drawableTop="@drawable/ic_thumbs_up_down_white_24dp"
                        android:text="1000000"
                        android:textColor="@color/material_white" />

                    <!--shows the views count-->
                    <TextView
                        android:id="@+id/ops_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/desc_text"
                        android:drawableTop="@drawable/ic_account_circle_white_24dp"
                        android:text="1000000"
                        android:textColor="@color/material_white"
                        app:layout_marginRightPercent="14%" />

                </android.support.percent.PercentRelativeLayout>

                <com.frankegan.verdant.FABToggle
                    android:id="@+id/fab"
                    android:layout_width="@dimen/fab_size"
                    android:layout_height="@dimen/fab_size"
                    android:layout_alignBottom="@id/big_net_img"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-32dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="-8dp"
                    android:background="@drawable/fab_detail_fav"
                    android:elevation="4dp"
                    android:src="@drawable/fab_heart" />

            </android.support.percent.PercentRelativeLayout>
        </com.nirhart.parallaxscroll.views.ParallaxScrollView>
    </android.support.design.widget.CoordinatorLayout>
</com.liuguangqiang.swipeback.SwipeBackLayout>