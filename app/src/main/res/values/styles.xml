<resources>
    <!-- Base application theme. -->
    <style name="Verdant" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_lightgreen500</item>
        <item name="colorPrimaryDark">@color/material_lightgreen700</item>
    </style>

    <style name="Verdant.LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@xml/launch_screen</item>
        <item name="colorPrimary">@color/material_lightgreen500</item>
        <item name="colorPrimaryDark">@color/material_lightgreen700</item>
    </style>

    <style name="Verdant.Detail"/>

    <style name="Verdant.SwipeBack" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Verdant.Settings" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/material_grey500</item>
        <item name="colorPrimaryDark">@color/material_grey700</item>
        <item name="android:textColorPrimary">@color/material_black</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

</resources>
